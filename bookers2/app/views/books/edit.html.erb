<main>
 <div class="container">
  <div class="row">
   <h1>Editing Book</h1>
   <%= form_with model:@book, local: true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
     <label for="book_opinion">Opinion</label>
     <%= f.text_area :opinion %>
    </div>
  
    <div class="actions">
     <%= f.submit 'Update Book' %>
    </div>

    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
    
    </div>
   </div>
  </main>
  <% end %>